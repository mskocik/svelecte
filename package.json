{
	"name": "svelecte",
	"description": "Flexible autocomplete/select component written in Svelte. Massively inspired by Selectize.js. Also usable as custom element (CE)",
	"version": "5.2.0",
	"type": "module",
	"license": "MIT",
	"keywords": [
		"svelte",
		"autocomplete",
		"select",
		"custom-element",
		"multiselect"
	],
	"homepage": "https://svelecte.vercel.app/",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mskocik/svelecte.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"standalone": "rollup --config rollup.config.standalone.js",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "vitest",
		"testui": "vitest --ui"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"svelte": "^5.2.7"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@shikijs/transformers": "^3.2.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-vercel": "^5.7.0",
		"@sveltejs/kit": "^2.20.4",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^29.5.14",
		"@vitest/ui": "^3.1.1",
		"jsdom": "^26.0.0",
		"mdsvex": "^0.12.3",
		"msw": "^2.7.3",
		"publint": "^0.3.10",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"rollup-plugin-css-only": "^4.5.2",
		"rollup-plugin-svelte": "^7.2.2",
		"shiki": "^3.2.1",
		"svelte-check": "^4.1.5",
		"svelte-dnd-action": "^0.9.60",
		"sveltekit-superforms": "^2.24.0",
		"tslib": "^2.8.1",
		"typescript": "^5.8.2",
		"vite": "^6.2.5",
		"vite-plugin-node-polyfills": "^0.23.0",
		"vitest": "^3.1.1",
		"zod": "^3.24.2"
	}
}
