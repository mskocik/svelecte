{
	"name": "svelecte",
	"description": "Flexible autocomplete/select component written in Svelte. Massively inspired by Selectize.js. Also usable as custom element (CE)",
	"version": "4.0.1",
	"type": "module",
	"license": "MIT",
	"keywords": [
		"svelte",
		"autocomplete",
		"select",
		"custom-element",
		"multiselect"
	],
	"homepage": "https://svelecte.vercel.app/",
	"repository": {
		"type": "git",
		"url": "https://github.com/mskocik/svelecte"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "vitest",
		"testui": "vitest --ui"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"svelte": "^3.43.0 || ^4.0.0"
	},
	"devDependencies": {
		"@shikijs/transformers": "^1.1.6",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/adapter-vercel": "^5.1.0",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/package": "^2.2.6",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/svelte": "^4.1.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/jest": "^29.5.12",
		"@vitest/ui": "^1.3.1",
		"jsdom": "^24.0.0",
		"mdsvex": "^0.11.0",
		"publint": "^0.2.7",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"shiki": "^1.1.6",
		"svelte": "^4.2.11",
		"svelte-check": "^3.6.4",
		"svelte-dnd-action": "^0.9.39",
		"svelte-use-form": "^2.10.0",
		"sveltekit-superforms": "^2.5.0",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.4",
		"vite-plugin-node-polyfills": "^0.21.0",
		"vitest": "^1.3.1",
		"zod": "^3.22.4"
	},
	"dependencies": {
		"svelte-tiny-virtual-list": "^2.0.5"
	}
}
